                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <a href="/user/logout"><button type="button" class="btn btn-outline-danger">Yes</button></a>
                </div>
            </div>
        </div>
    </div>
    <!-- LOGOUT MODAL ENDS HERE -->

    <!-- MAIN CONTENT -->
    <main class="container my-5">
        <div class="row doctor-profile">
            <div class="col-md-4 text-center">
                <div class="doctor-image mb-4">
                    <img src="istockphoto-177373093-612x612.jpg" alt="Doctor" class="img-fluid rounded-circle border border-5 border-primary">
                </div>
            </div>
            <div class="col-md-8">
                <div class="doctor-details">
                    <h1 class="mb-4" style="color: #0087ad;">Dr. John Smith</h1>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Speciality:</strong> <span id="speciality">Cardiology</span></p>
                            <p><strong>Experience:</strong> <span id="experience">15 Years</span></p>
                            <p><strong>Qualifications:</strong> <span id="qualifications">MBBS, MD</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Languages:</strong> <span id="languages">English, Hindi</span></p>
                            <p><strong>Location:</strong> <span id="location">Wellness City Hospital</span></p>
                            <p><strong>Availability:</strong> <span id="availability">Mon - Sat</span></p>
                        </div>
                    </div>
                    <button id="editBtn" class="btn btn-primary mt-3">Edit Details</button>
                    <div id="editControls" class="mt-3" style="display: none;">
                        <button id="saveBtn" class="btn btn-success me-2">Save Details</button>
                        <button id="returnBtn" class="btn btn-secondary">Return</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- APPOINTMENTS SECTION -->
    <section class="container mb-5">
        <h2 class="text-center mb-4" style="color: #0087ad;">Upcoming Appointments</h2>
