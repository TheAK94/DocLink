<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Profile - DocLink</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/doc_profile.css">
</head>
<body>
    <!-- PROFILE SECTION -->
    <main class="container my-5 section" id="profile">
        <div class="row doctor-profile">
            <div class="col-md-4 text-center">
                <div class="doctor-image mb-4">
                    <img src="/assets/blank-profile-pic.webp" alt="Doctor" class="img-fluid rounded-circle border border-5 border-primary">
                </div>
            </div>
            <div class="col-md-8">
                <div class="doctor-details">
                    <h1 class="mb-4" style="color: #0087ad;"><%= doctor.firstName %></h1>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Speciality:</strong> <span id="speciality"><%= doctor.speciality %></span></p>
                            <p><strong>Experience:</strong> <span id="experience"><%= doctor.experience %></span></p>
                            <p><strong>Qualifications:</strong> <span id="qualifications"><%= doctor.qualifications %>/span></p>
                        </div>
                        <div class="col-md-6">
                            <!-- <p><strong>Languages:</strong> <span id="languages">English, Hindi</span></p> -->
                            <p><strong>Location:</strong> <span id="location"><%= doctor.address %></span></p>
                            <!-- <p><strong>Availability:</strong> <span id="availability">Mon - Sat</span></p> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <div class="container mt-5 ms-4 doctor-list">
        <!-- card 1 -->
        <div class="card w-100 mb-3">
            <div class="card-body row">
                
                <div class="col-lg-6 col-12 p-3">
                    <div class="ms-5 w-100" id="card-wid">
                        <h2 class=" bold">Availability of Doctor <%= doctor.firstName %> <%= doctor.lastName %></Select></h2>
                        <p class="fs-5 fw-bold">Select Date and Time</Select></p>
                        <% if (doctor.openSlots && doctor.openSlots.length > 0) { %>
                            <div class="d-flex flex-column gap-3">
                                <% doctor.openSlots.forEach((slot) => { %>
                                    <div class="card shadow-sm border-0">
                                        <div class="card-body d-flex justify-content-between align-items-center">
                                            <div>
                                                <p class="mb-1 fw-semibold"><%= slot.date %></p>
                                                <p class="mb-0 text-muted"><%= slot.time %></p>
                                            </div>
                                            <a href="/user/book-slot/<%= doctor._id %>/<%= slot.date %>/<%= slot.time %>" class="btn btn-primary">Book Appointment</a>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <h4 class="text-danger">No slots available</h4>
                        <% } %>
                    </div>
                </div>
                
                
            </div>
        </div>
        <!-- end of cards  -->
    </div>
</body>
</html>